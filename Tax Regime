def report():
        report_window=Tk()
        report_window.title("TAX REGIME")
        report_window.geometry("1550x800+0+0")

        def report1():
            messagebox.showwarning("Caution","ALREADY IN REPORT PAGE",parent=report_window)

        #=========Variables===========
        strt_date=StringVar()
        end_date=StringVar()

        
        
        f=Frame(report_window,bg="blue",borderwidth=6,relief=SUNKEN)
        f.pack(fill="x")
        li_label=Label(f,text="Tax Regime",fg="white",font="helvetica 20 bold",bg="blue",pady=10)
        li_label.pack(side=LEFT)

        menu_frame=Frame(report_window,bg="blue",borderwidth=6,relief=SUNKEN)
        menu_frame.pack(side=LEFT,fill="y")
        home_button=Button(menu_frame,text="Home",bg="green",command=home,font="helvetica 15 bold",fg="white",width="15",cursor="hand2")
        home_button.pack(pady=20)
        pass_button=Button(menu_frame,text="Change Password",bg="green",font="helvetica 15 bold",fg="white",width="15",command=frgt_pswrd,cursor="hand2")
        pass_button.pack(pady=20)
        update_button=Button(menu_frame,text="Updating Details",bg="green",font="helvetica 15 bold",fg="white",width="15",command=frgt_pswrd,cursor="hand2")
        update_button.pack(pady=20)
        delete_button=Button(menu_frame,text="Deleting User",bg="green",font="helvetica 15 bold",fg="white",width="15",command=delete_details,cursor="hand2")
        delete_button.pack(pady=20)
        report_button=Button(menu_frame,text="Report",bg="green",font="helvetica 15 bold",fg="white",width="15",command=report1,cursor="hand2")
        report_button.pack(pady=20)
        
        f=Frame(report_window,bg="grey88",borderwidth=6,relief=SUNKEN)
        f.pack(fill="x")
        li_label=Label(f,text="Report",fg="blue",font="helvetica 20 bold",bg="grey88")
        li_label.pack()
        
        #=============SHOW TABLE==============           
        conn = con.cursor()
        conn.execute('select * from person')
        table_frame=Frame(report_window,bg="white",borderwidth=6,relief=SUNKEN)
        table_frame.place(x=230,y=150,width=1260,height=500)     
        tree=ttk.Treeview(table_frame)
        tree['show']='headings'
        s= ttk.Style(table_frame)
        s.configure(".", font="helvetica 10")
            
        tree["columns"] = ("UserId","Name","EMail","PhnNo","Created_on","Level","Address","Options")
            
                    #setting width of the column
        tree.column('UserId',stretch="NO",minwidth=100,width=100,anchor=tk.CENTER)
        tree.column('Name',stretch="NO",minwidth=300,width=300,anchor=tk.CENTER)
        tree.column('EMail',stretch="NO",minwidth=300,width=300,anchor=tk.CENTER)
        tree.column('PhnNo',stretch="NO",minwidth=200,width=200,anchor=tk.CENTER)
        tree.column('Created_on',stretch="NO",minwidth=100,width=100,anchor=tk.CENTER)
        tree.column('Level',stretch="NO",minwidth=100,width=100,anchor=tk.CENTER)
        tree.column('Address',stretch="NO",minwidth=200,width=200,anchor=tk.CENTER)
        tree.column('Options',stretch="NO",minwidth=100,width=100,anchor=tk.CENTER)



            #setting headings of the column
        tree.heading('UserId',text="ID",anchor=tk.CENTER)
        tree.heading('Name',text="NAME",anchor=tk.CENTER)
        tree.heading('EMail',text="E-MAIL",anchor=tk.CENTER)
        tree.heading('PhnNo',text="PHONE NUMBER",anchor=tk.CENTER)
        tree.heading('Created_on',text="CREATED ON",anchor=tk.CENTER)
        tree.heading('Level',text="LEVEL",anchor=tk.CENTER)
        tree.heading('Address',text="ADDRESS",anchor=tk.CENTER)
        tree.heading('Options',text="OPTIONS",anchor=tk.CENTER)
            
        i=0
        for ro in conn:
            tree.insert('',i,text="",values=(ro[0],ro[1],ro[2],ro[3],ro[4],ro[5],ro[6],ro[7]))
            i=i+1
                
                # ********************HORIZONTAL SCROLL*********************   
        hsb= ttk.Scrollbar(table_frame,orient="horizontal")
        hsb.configure(command=tree.xview)
        tree.configure(xscrollcommand=hsb.set)
        hsb.pack(fill=X,side=BOTTOM)
            
                    # ********************VERTICAL SCROLL********************* 
        vsb= ttk.Scrollbar(table_frame,orient="vertical")
        vsb.configure(command=tree.yview)
        tree.configure(yscrollcommand=vsb.set)
        vsb.pack(fill=Y,side=RIGHT)        
            
        tree.pack(fill=BOTH,expand=1)

        '''def search():
            d=()
            c=con.cursor()
            sql='select * from person where Created_On >=%s and Created_On<=%s'
            d=(esd.get(),eed.get(),)
            c.execute(sql,d)
            rows=c.fetchall()
            if len(rows)!=0:
                tree.delete(*tree.get_children())
                for i in rows:
                    tree.insert("",END,values=i)
                c.commit()'''



        
        report_window.mainloop()



 

