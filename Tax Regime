    li_label.pack()

    h_label=Label(Update_window,text="Please enter all the new updated details of User's",font="helvetica 18 bold")
    h_label.pack(pady=20)

    f1= Frame(Update_window,borderwidth=8,bg="grey86",relief=SUNKEN)
    f1.pack(pady=10)
    uinfobox_label=Label(f1,bg="grey86",width="20")
