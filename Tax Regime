    usid_Label.place(x=40,y=20)
    ui=Entry(f1,font="18",bd="8",textvariable=userid,width="40")
    ui.place(x=300,y=20)

    #===========NAME===========
    name_Label=Label(f1,text="Name",bg="grey86", fg="black",font="helvetica 15 bold")
    name_Label.place(x=40,y=70)
    n=Entry(f1,font="18",bd=8,textvariable=name,width="40")
    n.place(x=300,y=70)

    #===========E-MAIL===========
    eml_Label=Label(f1,text="E-Mail",bg="grey86", fg="black",font="helvetica 15 bold")
