    level=StringVar()
    crt=StringVar()
    optn=StringVar()
    pswrd=StringVar()
    email=StringVar()
    phnno=StringVar()
    adrs=StringVar()

    def update_details1():
        messagebox.showwarning("Caution","ALREADY IN UPDATING DETAILS PAGE",parent=Update_window)
        

