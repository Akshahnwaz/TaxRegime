#==============DELETE WINDOW============
def delete_details():
    delete_window=Tk()
    delete_window.title("TAX REGIME")
    delete_window.geometry("1550x800+0+0")

    #==============Variables============
    userid=StringVar()

    def delete_details1():
        messagebox.showwarning("Caution","ALREADY IN DELETION PAGE",parent=delete_window)

    f=Frame(delete_window,bg="blue",borderwidth=6,relief=SUNKEN)
    f.pack(fill="x")
    li_label=Label(f,text="Tax Regime",fg="white",font="helvetica 20 bold",bg="blue",pady=10)
    li_label.pack(side=LEFT)
    
    menu_frame=Frame(delete_window,bg="blue",borderwidth=6,relief=SUNKEN)
    menu_frame.pack(side=LEFT,fill="y")
    home_button=Button(menu_frame,text="Home",command=home,bg="green",font="helvetica 15 bold",fg="white",width="15",cursor="hand2")
    home_button.pack(pady=20)
    pass_button=Button(menu_frame,text="Password Reset",bg="green",font="helvetica 15 bold",fg="white",width="15",command=frgt_pswrd,cursor="hand2")
    pass_button.pack(pady=20)
    update_button=Button(menu_frame,text="Updating Details",bg="green",font="helvetica 15 bold",fg="white",width="15",command=update_details,cursor="hand2")
    update_button.pack(pady=20)
    delete_button=Button(menu_frame,text="Deleting User",bg="green",font="helvetica 15 bold",fg="white",width="15",command=delete_details1,cursor="hand2")
    delete_button.pack(pady=20)
    report_button=Button(menu_frame,text="Report",bg="green",font="helvetica 15 bold",fg="white",width="15",command=report,cursor="hand2")
    report_button.pack(pady=20)

    f=Frame(delete_window,bg="grey88",borderwidth=6,relief=SUNKEN)
    f.pack(fill="x")
    li_label=Label(f,text="Delete Form",fg="blue",font="helvetica 20 bold",bg="grey88")
    li_label.pack()

    f1= Frame(delete_window,borderwidth=8,bg="grey86",relief=SUNKEN)
    f1.pack(pady=50)
    uinfobox_label=Label(f1,bg="grey86",width="20")
    uinfobox_label.place(x=40,y=80)
    uinfobox_label.pack(padx=350,pady=100)

    #===========User ID===========
    usid_Label=Label(f1,text="User Id",bg="grey86", fg="black",font="helvetica 25 bold")
    usid_Label.place(x=40,y=100)
    ui=Entry(f1,font="18",bd="8",textvariable=userid,width="40")
    ui.place(x=300,y=100) 

     #CHECKING USERID EXIST OR NOT
    def check_user(userid):
        sql='select * from person where userid=%s'
        c=con.cursor(buffered=True)
        data=(userid,)
        c.execute(sql,data)
        r=c.rowcount
        if r==1 :
            return True
        else:
            return False

    #==============DELETE BUTTON FUNCTION============
    def delete():
        mdelete=messagebox.askyesno("Tax Regime","Do you want to delete this user",parent=delete_window)
        if mdelete>0:
            userid=ui.get()
            if userid=="":
                #==========WARNING MESSAGE FOR LEAVING ANY FIELD EMPTY==========
                messagebox.showwarning("Caution","Password and UserId fields are required",parent=delete_window)
                
            elif (check_user(userid)==False):   
                #==========WARNING MESSAGE FOR ENTERING INVALID USER ID==========           
                messagebox.showwarning("Caution","User_Id Doesn't Exist",parent=delete_window)    
                
            else:
                if mdelete>0:      
                    data=()
                    c=con.cursor()
                    sql='delete from person where userid=%s'
                    data=(userid,)
                    c.execute(sql,data)
                    con.commit()
                    #==========OUTPUT MESSAGE FOR DELETING DETAILS SUCCESSFULLY==========
                    messagebox.showinfo("Successful","DETAILS DELETED SUCCESSFULLY",parent=delete_window)
                else:
                    if not mdelete:
                        return     
            


    
    up=Button(f1,text="DELETE",bg="red",font="helvetica 20 bold",fg="white",width="20",command=delete,cursor="hand2")
    up.pack(side=RIGHT)

    delete_window.mainloop()

