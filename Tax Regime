    address.place(x=300,y=320)

    #===========OPTION===========
    optn_Label=Label(f1,text="Option",bg="grey86", fg="black",font="helvetica 15 bold")
    optn_Label.place(x=40,y=370)
    o=Entry(f1,font="18",bd=8,textvariable=optn,width="40")
    o.place(x=300,y=370)

    #===========PASSWORD===========
    psd_Label=Label(f1,text="Password",bg="grey86", fg="black",font="helvetica 15 bold")
    psd_Label.place(x=40,y=420)
    pwd=Entry(f1,font="18",bd=8,textvariable=pswrd,width="40")
    pwd.place(x=300,y=420)

    

    #CHECKING USERID EXIST OR NOT
    def check_user(userid):
        sql='select * from person where userid=%s'
        c=con.cursor(buffered=True)
        data=(userid,)
        c.execute(sql,data)
        r=c.rowcount
        if r==1 :
            return True
        else:
            return False
        
    #CHECKING PASSWORD CORRECT OR NOT    
    def check_psd(pswrd):
        sql1='select password from person where password=%s '
        c=con.cursor(buffered=True)
        data=(pswrd,)
        c.execute(sql1,data)
        r=c.rowcount
        if r==1 :
            return True
        else:
            return False
        
    #==============UPDATE FUNCTION============
    def update_form():
        userid=ui.get()
        pswrd=pwd.get()
        if pswrd=="" or userid=="":
            #==========WARNING MESSAGE FOR LEAVING ANY FIELD EMPTY==========
            messagebox.showwarning("Caution","Password and UserId fields are required",parent=Update_window)
        elif (check_user(userid)==False):
            #==========WARNING MESSAGE FOR ENTERING INVALID USER ID==========
            messagebox.showwarning("Caution","User_Id Doesn't Exist",parent=Update_window)          
        else:
            if (check_user(userid)==True):
                if (check_psd(pswrd)==True):         

                    data=()
                    userid=ui.get()
                    name=n.get()
                    level=lvl.get()
                    crt=co.get()
                    optn=o.get()
                    pswrd=pwd.get()
                    email=eml.get()
                    phnno=phn.get()
                    adrs=address.get()
                    c=con.cursor()                    
                    sql='update person set Name=%s ,EMail=%s ,Phone_Number=%s ,Created_On=%s ,Level=%s ,Address=%s ,Options=%s where userid = %s and  password= %s'
                    data=(name,email,phnno,crt,level,adrs,optn,userid,pswrd)#creation of tuples
                    c.execute(sql,data)
                    con.commit()
                    #==========OUTPUT MESSAGE FOR UPDATING DETAILS SUCCESSFULLY==========
                    messagebox.showinfo("Successful","DETAILS UPDATED SUCCESSFULLY",parent=Update_window)

                else:
                    #==========WARNING MESSAGE FOR ENTERING WRONG PASSWORD==========
                    messagebox.showwarning("Caution","Wrong Password!!",parent=Update_window)     
            else:
                #==========WARNING MESSAGE FOR ENTERING INVALID USER ID==========   
                messagebox.showwarning("Caution","User_Id Doesn't Exist",parent=Update_window)

    up=Button(f1,text="UPDATE",bg="blue",font="helvetica 20 bold",fg="white",width="20",command=update_form,cursor="hand2")
    up.pack(side=RIGHT)


    Update_window.mainloop()

