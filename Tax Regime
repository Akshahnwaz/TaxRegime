    phn.place(x=300,y=170)

    #===========DATE===========
    date_Label=Label(f1,text="Created_on[YYYY-MM-DD]",bg="grey86", fg="black",font="helvetica 15 bold")
    date_Label.place(x=40,y=220)
    co=Entry(f1,font="18",bd=8,textvariable=crt,width="40")
    co.place(x=300,y=220)

    #===========LEVEL===========
    level_label=Label(f1,text="Level",bg="grey86", fg="black",font="helvetica 15 bold")
    level_label.place(x=40,y=270)
    lvl=Entry(f1,font="18",bd=8,textvariable=level,width="40")
    lvl.place(x=300,y=270)

    #===========ADDRESS===========
    address_Label=Label(f1,text="Address",bg="grey86", fg="black",font="helvetica 15 bold")
    address_Label.place(x=40,y=320)
    address=Entry(f1,font="18",bd=8,textvariable=adrs,width="40")
    address.place(x=300,y=320)

    #===========OPTION===========
    optn_Label=Label(f1,text="Option",bg="grey86", fg="black",font="helvetica 15 bold")
    optn_Label.place(x=40,y=370)
    o=Entry(f1,font="18",bd=8,textvariable=optn,width="40")
    o.place(x=300,y=370)

    #===========PASSWORD===========
    psd_Label=Label(f1,text="Password",bg="grey86", fg="black",font="helvetica 15 bold")
    psd_Label.place(x=40,y=420)
    pwd=Entry(f1,font="18",bd=8,textvariable=pswrd,width="40")
    pwd.place(x=300,y=420)

    #CHECKING USERID EXIST OR NOT
    def check_user(userid):
        sql='select * from person where userid=%s'
        c=con.cursor(buffered=True)
        data=(userid,)
        c.execute(sql,data)
        r=c.rowcount
        if r==1 :
            return True
        else:
            return False
        

    
        
    
    #ADDING NEW USER
    def add_user():
        userid=ui.get()
        if ui.get()=="" or n.get()=="" or lvl.get()=="" or co.get()=="" or o.get()=="" or pwd.get()=="" or eml.get()=="" or phn.get()=="" or address.get()=="":
            #==========WARNING MESSAGE FOR LEAVING ANY FIELD EMPTY==========
            messagebox.showwarning("Caution","All fields are required",parent=registration_window)
        
        else:
            if (check_user(userid)==True):
                messagebox.showwarning("Caution","User_Id Already Exist",parent=registration_window)
            else:
                try:
                    data=()
                    userid=ui.get()
                    name=n.get()
                    level=lvl.get()
                    crt=co.get()
                    optn=o.get()
                    pswrd=pwd.get()
                    email=eml.get()
                    phnno=phn.get()
                    adrs=address.get()
                    data=(userid,name,email,phnno,crt,level,adrs,optn,pswrd)#creation of tuples
                    sql='insert into person values(%s,%s,%s,%s,%s,%s,%s,%s,%s)'
                    c=con.cursor()
                    val=data
                    c.execute(sql,val)
                    con.commit()
                    #==========OUTPUT MESSAGE FOR ADDING DETAILS SUCCESSFULLY==========
                    messagebox.showinfo("Successful","Registered Successfully",parent=registration_window)

                except Exception as es:
                    #==========WARNING MESSAGE FOR ENTERING ANY FIELD's DATA WRONG==========
                    messagebox.showwarning("Warning",f"Something went wrong:{str(es)}",parent=registration_window)

    
    #===========BUTTON===========
    rb=Button(f1,text="REGISTER",bg="green",font="helvetica 20 bold",fg="white",width="10",command=add_user,height="1",cursor="hand2")
    rb.pack(side=RIGHT)  

    registration_window.mainloop()


#***********************FORGET PASSWORD WINDOW****************************
def frgt_pswrd():
    userid=StringVar()
    np=StringVar()
    pswrd=StringVar()
 
    #CHECKING USERID EXIST OR NOT
    def check_user(userid):
        sql='select * from person where userid=%s'
        c=con.cursor(buffered=True)
        data=(userid,)
        c.execute(sql,data)
        r=c.rowcount
        if r==1:
            return True
        else:
            return False
        
    #CHECKING PASSWORD CORRECT OR NOT
    def check_psd(pswrd):
        sql1='select password from person where password=%s '
        c=con.cursor(buffered=True)
        data=(pswrd,)
        c.execute(sql1,data)
        r=c.rowcount
        if r==1 :
            return True
        else:
            return False
        
    #=============UPDATING PASSWORD FUNCTION=============
    def update():
        userid=ui.get()
        pswrd=opwd.get()
        if pswrd=="" or userid=="" or pwd.get()=="":
            #==========WARNING MESSAGE FOR LEAVING ANY FIELD EMPTY==========
            messagebox.showwarning("Caution","All fields are required",parent=frgt_pswrd_window)
              
        else:
            if (check_user(userid)==True):
                if (check_psd(pswrd)==True): 
                    np=pwd.get()
                    c=con.cursor()
                    sql='update person set password= %s where userid = %s and password=%s'
                    d=(np,userid,pswrd)
                    c.execute(sql,d)
                    con.commit()
                    #==========OUTPUT MESSAGE FOR UPDATING PASSWORD SUCCESSFULLY==========
                    messagebox.showinfo("Successful","PASSWORD UPDATED SUCCESSFULLY",parent=frgt_pswrd_window)
                else:
                    messagebox.showwarning("Caution","Wrong Old Password!!",parent=frgt_pswrd_window)     
            else:
                #==========WARNING MESSAGE FOR ENTERING INVALID USER ID==========   
                messagebox.showwarning("Caution","User_Id Doesn't Exist",parent=frgt_pswrd_window)
            
            
    frgt_pswrd_window=Tk()
    frgt_pswrd_window.title("Tax Regime")
    frgt_pswrd_window.geometry("1550x800+0+0")

    f=Frame(frgt_pswrd_window,bg="blue",borderwidth=6,relief=SUNKEN)
    f.pack(fill="x")
    li_label=Label(f,text="Tax Regime",fg="white",font="helvetica 20 bold",bg="blue",pady=10)
    li_label.pack(side=LEFT)

    menu_frame=Frame(frgt_pswrd_window,bg="blue",borderwidth=6,relief=SUNKEN)
    menu_frame.pack(side=LEFT,fill="y")
    home_button=Button(menu_frame,text="Home",bg="green",font="helvetica 15 bold",command=home,fg="white",width="15",cursor="hand2")
    home_button.pack(pady=20)
    pass_button=Button(menu_frame,text="Change Password",bg="green",font="helvetica 15 bold",fg="white",width="15",command=frgt_pswrd,cursor="hand2")
    pass_button.pack(pady=20)
    update_button=Button(menu_frame,text="Updating Details",bg="green",font="helvetica 15 bold",fg="white",width="15",command=update_details,cursor="hand2")
    update_button.pack(pady=20)
    delete_button=Button(menu_frame,text="Deleting User",bg="green",font="helvetica 15 bold",fg="white",width="15",command=delete_details,cursor="hand2")
    delete_button.pack(pady=20)
    report_button=Button(menu_frame,text="Report",bg="green",font="helvetica 15 bold",fg="white",width="15",command=report,cursor="hand2")
    report_button.pack(pady=20)

    f=Frame(frgt_pswrd_window,bg="grey88",borderwidth=6,relief=SUNKEN)
    f.pack(fill="x")
    li_label=Label(f,text="PASSWORD UPDATING",fg="blue",font="helvetica 20 bold",bg="grey88")
    li_label.pack()


    f1= Frame(frgt_pswrd_window,borderwidth=8,bg="grey86",relief=SUNKEN)
    f1.pack(pady=50)
    uinfobox_label=Label(f1,bg="grey86",width="20")
    uinfobox_label.place(x=60,y=130)
    uinfobox_label.pack(padx=290,pady=150)

    #===========USER ID===========
    usid_Label=Label(f1,text="User Id",font="helvetica 15 bold",bg="grey86",fg="black")
    usid_Label.place(x=40,y=40)
    ui=Entry(f1,font="18",bd=7,textvariable=userid,width="25")
    ui.place(x=300,y=40)

    #===========OLD PASSWORD===========
    opsd_Label=Label(f1,text="Enter old Password",font="helvetica 15 bold",bg="grey86",fg="black")
    opsd_Label.place(x=40,y=130)
    opwd=Entry(f1,font="18",bd=7,textvariable=pswrd,width="25")
    opwd.place(x=300,y=130)

    #===========NEW PASSWORD===========
    psd_Label=Label(f1,text="Enter new Password",font="helvetica 15 bold",bg="grey86",fg="black")
    psd_Label.place(x=40,y=220)
    pwd=Entry(f1,font="18",bd=7,textvariable=np,width="25")
    pwd.place(x=300,y=220)
    
    #===========BUTTON===========
    up=Button(f1,text="UPDATE",bg="blue",font="helvetica 20 bold",fg="white",width="20",command=update,cursor="hand2")
    up.pack(side=RIGHT)

    frgt_pswrd_window.mainloop()


    
